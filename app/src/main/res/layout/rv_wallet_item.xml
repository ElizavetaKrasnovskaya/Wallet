<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/common_horizontal_l"
    android:background="@drawable/shape_wallet_item"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivCurrencyLogo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="@dimen/common_horizontal_l"
        android:layout_marginTop="@dimen/common_vertical_m"
        android:layout_marginBottom="@dimen/common_vertical_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"
        android:background="@drawable/ic_bitcoin" />

    <TextView
        android:id="@+id/tvCurrencyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_l"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@id/ivCurrencyLogo"
        app:layout_constraintTop_toTopOf="@id/ivCurrencyLogo"
        tools:text="Bitcoin" />

    <TextView
        android:id="@+id/tvCurrencyCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/common_horizontal_l"
        android:textColor="@color/light_purple"
        android:textSize="@dimen/text_size_s"
        app:flow_horizontalBias="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvCurrencyName"
        app:layout_constraintTop_toBottomOf="@id/tvCurrencyName"
        tools:text="0.56433 BTC" />

</androidx.constraintlayout.widget.ConstraintLayout>