<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark_purple"
    tools:context=".ui.main.settings.SettingsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_rounded_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/ic_wallet"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_vertical_4xl"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_4xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/clLogo"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvShowMnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autofillHints="name"
        android:background="@drawable/selector_et"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        android:layout_marginTop="@dimen/common_vertical_l"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Show mnemonic"/>

    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autofillHints="name"
        android:background="@drawable/selector_et"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        android:layout_marginTop="@dimen/common_vertical_l"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        app:layout_constraintTop_toBottomOf="@id/tvShowMnemonic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Change password"/>

    <TextView
        android:id="@+id/tvChangeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autofillHints="name"
        android:background="@drawable/selector_et"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        android:layout_marginTop="@dimen/common_vertical_l"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Change name"/>

    <TextView
        android:id="@+id/tvDeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autofillHints="name"
        android:background="@drawable/shape_button"
        android:backgroundTint="@color/red"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        android:layout_marginBottom="@dimen/common_vertical_l"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        app:layout_constraintBottom_toTopOf="@id/tvLogout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Delete account"/>

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:autofillHints="name"
        android:background="@drawable/shape_button"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        android:layout_marginBottom="@dimen/common_vertical_l"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Logout"/>

</androidx.constraintlayout.widget.ConstraintLayout>