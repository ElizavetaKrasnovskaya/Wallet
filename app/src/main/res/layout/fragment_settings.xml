<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    tools:context=".ui.main.settings.SettingsFragment">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_vertical_4xl"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_4xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Name" />

    <TextView
        android:id="@+id/tvShowMnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginTop="@dimen/common_vertical_l"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        android:autofillHints="name"
        android:background="@drawable/selector_et"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:text="Show mnemonic"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvName" />

    <TextView
        android:id="@+id/tvChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginTop="@dimen/common_vertical_l"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        android:autofillHints="name"
        android:background="@drawable/selector_et"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:text="Change password"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvShowMnemonic" />

    <TextView
        android:id="@+id/tvChangeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginTop="@dimen/common_vertical_l"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        android:autofillHints="name"
        android:background="@drawable/selector_et"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:text="Change name"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvChangePassword" />

    <TextView
        android:id="@+id/tvDeleteAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        android:layout_marginBottom="@dimen/common_vertical_l"
        android:autofillHints="name"
        android:background="@drawable/shape_button"
        android:backgroundTint="@color/red"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:text="Delete account"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        app:layout_constraintBottom_toTopOf="@id/tvLogout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/common_horizontal_m"
        android:layout_marginEnd="@dimen/common_horizontal_m"
        android:layout_marginBottom="@dimen/common_vertical_l"
        android:autofillHints="name"
        android:background="@drawable/shape_button"
        android:importantForAutofill="no"
        android:padding="@dimen/common_vertical_m"
        android:text="Logout"
        android:textColor="@color/white"
        android:textColorHint="@color/orange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>