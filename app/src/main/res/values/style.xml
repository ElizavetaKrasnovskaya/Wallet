<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/common_vertical_5xl</item>
        <item name="android:layout_marginStart">@dimen/common_horizontal_2xl</item>
        <item name="android:layout_marginEnd">@dimen/common_horizontal_2xl</item>
        <item name="android:textSize">@dimen/text_size_2xl</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="SubTitle">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/common_vertical_5xl</item>
        <item name="android:layout_marginStart">@dimen/common_horizontal_3xl</item>
        <item name="android:layout_marginEnd">@dimen/common_horizontal_3xl</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="OrangeButton">
        <item name="android:background">@drawable/shape_button</item>
        <item name="android:layout_marginStart">@dimen/common_horizontal_3xl</item>
        <item name="android:layout_marginEnd">@dimen/common_horizontal_3xl</item>
        <item name="android:layout_marginBottom">@dimen/common_vertical_m</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.CryptoWallet.Splash" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/dark_purple</item>
        <item name="android:navigationBarColor">@color/dark_purple</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_green_light</item>
    </style>

    <style
        name="ThemeOverlay.Demo.BottomSheetDialog"
        parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.Demo.BottomSheet</item>
    </style>

    <style name="Widget.Demo.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.Demo</item>
    </style>

    <style name="ShapeAppearanceOverlay.Demo" parent="">
        <item name="cornerSize">23dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize20Percent" parent="">
        <item name="cornerSize">20%</item>
    </style>
</resources>